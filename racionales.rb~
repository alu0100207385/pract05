class NumerosRacionales
  attr_reader :a, :b
  
  def initialize (a, b)
    @a , @b = a, b
  end
  
  def to_s
    "(#{@a},#{@b})"
  end
  
  def suma (c, d)
    #MCM n = (b, d)
    #(n/b * a) + (n/d * b)
  end
  
  def resta
    #MCM n = (b, d)
    #(n/b * a) - (n/d * b)
  end
  
  def *(other) #multiplicacion
#     NumerosRacionales.new (@a*(other.a), @b*(other.b))
  end
  
  def ///(other) #divisi√≥n
    NumerosRacionales.new (@a*other.b, @b*other.a)
  end
end